<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#003333"
    tools:context=".MainActivityFragment">


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#999999"
        android:id="@+id/tableLayout">

        <TableRow android:layout_height="100dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="60sp"
                android:id="@+id/button0"
                android:layout_column="1"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="60sp"
                android:id="@+id/button1"
                android:layout_column="5"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="60sp"
                android:id="@+id/button2"
                android:layout_column="9"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="100dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="60sp"
                android:id="@+id/button3"
                android:layout_column="1"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="60sp"
                android:id="@+id/button4"
                android:layout_column="5"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="60sp"
                android:id="@+id/button5"
                android:layout_column="9"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="100dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="60sp"
                android:id="@+id/button6"
                android:layout_column="1"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="60sp"
                android:id="@+id/button7"
                android:layout_column="5"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="60sp"
                android:id="@+id/button8"
                android:layout_column="9"
                android:layout_weight="1"/>
        </TableRow>



    </TableLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Status"
        android:id="@+id/statusInfo"
        android:layout_below="@+id/tableLayout"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="#00cc00"
        android:textColor="#000000"
        android:autoText="false"

        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:id="@+id/userScore"
        android:background="#003333"
        android:layout_below="@id/statusInfo"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/user_score"
            android:id="@+id/textView2"
            android:textColor="#ffffff"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/userCount"
            android:textColor="#ffffff"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="#003333"
        android:id="@+id/computer_score"
        android:layout_below="@id/userScore"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/computer_score"
            android:id="@+id/textView4"
            android:textColor="#ffffff"
            android:layout_weight="0.62"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/computerScore"
            android:textColor="#ffffff"
            android:layout_weight="1.20"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="#003333"
        android:layout_below="@id/computer_score"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/tie"
            android:id="@+id/textView6"
            android:textColor="#ffffff"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tieCount"
            android:textColor="#ffffff"
            android:layout_weight="0.65"/>
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_again"
        android:id="@+id/button9"
        android:background="#999999"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
